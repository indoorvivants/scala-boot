{
  "applications": {
    "app": {
      "type": "external",
      "executable": "scala-boot-server",
      "processes": {
        "spare": 2,
        "max": 8
      }
    }
  },
  "routes": {
    "web": [
      {
        "match": {
          "uri": "/api/*"
        },
        "action": {
          "pass": "applications/app"
        }
      },
      {
        "match": {
          "uri": "~^((/(.*)\\.(js|css|html))|/)$"
        },
        "action": {
          "share": "static$uri"
        }
      },
      {
        "action": {
          "share": "static/index.html"
        }
      }
    ]
  },
  "listeners": {
    "*:8080": {
      "pass": "routes/web"
    }
  }
}
